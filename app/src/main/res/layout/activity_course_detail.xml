<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.chandu.indiaelearn.CourseDetail">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/tech"
            android:scaleType="centerCrop"
            android:id="@+id/coverpic"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coverpic"
        android:id="@+id/course_detail_title">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="46dp"
            android:src="@drawable/tech" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/imageView"
            android:fontFamily="sans-serif-smallcaps"
            android:singleLine="true"
            android:text="Technology"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/imageView"
            android:layout_below="@+id/textView"
            android:text="India e Learn"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </RelativeLayout>

        <LinearLayout
            android:id="@+id/twobuttons"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:layout_below="@+id/course_detail_title"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addToWishList"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:clickable="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:elevation="5dp"
                android:text="Add to Wish List"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/takeThisCourse"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:elevation="5dp"
                android:background="@color/colorPrimaryDark"
                android:text="Take This Course"
                android:textColor="#ffffff"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:onClick="proceed" />

        </LinearLayout>



        <TextView
            android:id="@+id/intro1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/twobuttons"
            android:layout_marginTop="50dp"
            android:background="@color/colorPrimary"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:text="Course Description :"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/introdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/intro1"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
