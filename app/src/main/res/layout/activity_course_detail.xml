                        juivyocutgjvhyofuvkbhbbbkhbctuvuvhjbvgucvhjbuvogtcgvhbkivyocutgjvhyofuvkbhbbbkhb ctuvuvhjbvgucvhjbuvogtcgvhbk; juivyocutgjvhyofuvkbhbbbkhb "
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/curriculum1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/introdetail"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:textSize="20dp"
            android:text="Curriculum :"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/curriculumdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/curriculum1"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="15dp"
            android:paddingTop="15dp"
            android:text="bouctuvuvhjbvgucvhjbuvogtcgvhbuivyocutgjvhyofuvkbhbbbkhbctuvuvhjbvgucvhjbuvogtcgvhbuivyocutgjvhyofuvkbhbbbkhb ctuvuvhjbvgucvhjbuvogtcgvhbjuivyocutgjvhyofuvkbhbbbkhb ctuvuvhjbvgucvhjbuvogtcgvhbk; juivyocutgjvhyofuvkbhbbbkhb ctuvuvhjbvgucvhjbuvogtcgvhbk; juivyocutgjvhyofuvkbhbbbkhb ctuvuvhjbvgucvhjbuvogtcgvhbk; juivyocutgjvhyofuvkbhbbbkhb ctuvuvhjbvgucvhjbuvogtcgvhbk; juivyocutgjvhyofuvkbhbbbkhb ctuvuvhjbvgucvhjbuvogtcgvhbk; juivyocutgjvhyofuvkbhbbbkhb ctuvuvhjbvgucvhjbuvogtcgvhbk;
