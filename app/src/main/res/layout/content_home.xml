<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="none"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.chandu.indiaelearn.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/logindetailscard"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">

                <ImageView
                    android:id="@+id/profilepic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="12dp" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_toRightOf="@+id/profilepic"
                    android:text="hello"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mailid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/username"
                    android:layout_toRightOf="@+id/profilepic"
                    android:text="hiii"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/logoutbutton"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/logout"
                    android:padding="15dp"
                    android:clickable="true"
                    android:onClick="logout"
                    />


            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/learning_card"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/logindetailscard"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:onClick="FromHomeToLearning">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/learning_card_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/learning_card_header"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/image2"
                    android:layout_toRightOf="@+id/learning_card_image"
                    android:gravity="center"
                    android:text="LEARNING"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/learning_card_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/learning_card_header"
                    android:layout_toRightOf="@+id/learning_card_image"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Which we use our experience to deal with new situations and to develop.We facilitate personailzed learning and address budget issues." />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/community_card"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/leadership_card"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:onClick="FromHomeToLearning">

            <RelativeLayout
                android:onClick="goToLeadership"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/community_card_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/community_card_header"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/image2"
                    android:layout_toRightOf="@+id/community_card_image"
                    android:gravity="center"
                    android:text="LEADERSHIP"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/community_card_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/community_card_header"
                    android:layout_toRightOf="@+id/community_card_image"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Leadership roles are around us. They can be applied to any situation. Where we require to lead,Professionally,Socially." />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/leadership_card"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/learning_card"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:onClick="FromHomeToLearning">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/leadership_card_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/leadership_card_header"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/image2"
                    android:layout_toRightOf="@+id/leadership_card_image"
                    android:gravity="center"
                    android:text="COMMUNITY"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/leadership_card_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/leadership_card_header"
                    android:layout_toRightOf="@+id/leadership_card_image"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="self Organized network of people with common interest, To colloborate by sharing ideas,information and other resources." />

            </RelativeLayout>


        </android.support.v7.widget.CardView>




    </LinearLayout>

</ScrollView>
